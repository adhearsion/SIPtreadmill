- content_for(:page_icon) { "icon-bar-chart" }
- content_for(:page_title) { "Editing Profile" }
= render "layouts/page_header"
.container-fluid.padded
  .row-fluid
    .span12
      .box
        .box-header
          %span.title Edit Profile
          %ul.box-toolbar
            %li= link_to '', :back, class: 'btn btn-primary icon-arrow-left', title: 'Back'
            %li= link_to '', @profile, class:'btn btn-info icon-eye-open', title: 'Show'
        .box-content.padded-top
          = render 'form'

